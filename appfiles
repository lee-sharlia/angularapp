//overlaymenu.component
import {Component} from '@angular/core';
import {OverlaymenuService} from './overlaymenu.service';

@Component({
    selector: 'cardmenu',
    template: `
                <h3> {{title}} </h3>
                <br />
                <ul>
                  <li *ngFor="#menuitem of menuitems"> 
                    {{menutitem}}</li>
                </ul>
                `
    
    providers: [OverlaymenuService]
    
})

export class OverlaymenuComponent {
  title = "Menu Items";
  menuitems;
  
  constructor(overlaymenuService: OverlaymenuService) {
        this.menutiems = overlaymenuService.getMenuitems();
  }
}


******SECOND ITERATION***********************************
import {Component} from '@angular/core';
import {AppComponent} from './app/component';
import {OverlaymenuService} from './overlaymenu.service';

@Component({
    selector: 'cardmenu',
    template: `
          <div class="cardmenu">
              <h3> {{title}} </h3>
              <br />
                <ng-content></ng-content>
                    
          </div>
          `,
    templateUrl: './overlaymenu.component.html'
    
    providers: [OverlaymenuService]
    
})

export class OverlaymenuComponent {
  title = "Menu Items";
  menuitems;
  
  constructor(overlaymenuService: OverlaymenuService) {
        this.menutiems = overlaymenuService.getMenuitems();
  }
}



*********THIRD ITERATION****************************
import {Component} from '@angular/core';
import {OverlaymenuService} from './overlaymenu.service';

@Component({
    selector: 'cardmenu',
    templateUrl: 'overlaymenu.component.html',
    
    providers: [OverlaymenuService]
    
})

export class OverlaymenuComponent {
  title = "Menu Items";
  menuitems;
  
  constructor(overlaymenuService: OverlaymenuService) {
        this.menutiems = overlaymenuService.getMenuitems();
  }
  
  @Input () {
    
  }
}







//overlaymenu.directive
import {OverlaymenuComponent, ElementRef, Input};

@Directive({
    selector: 'cardmenu',
})

export class OverlaymenuDirective {
    constructor(el:ElementRef)
}




//overlaymenu.service
export class OverlaymenuService {
  getMenuitems(): string [] {
    return ["Initial", "Modify", "Evaluate"];
  }
}
