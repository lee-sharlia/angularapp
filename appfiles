//app.component
import {Component} from './@angular/core';
import {AppModule} from './app.module';
import {OvelaymenuComponent} from './overlaymenu.component';
import {OverlaymenuDirective} from './overlaymenu.directive';

@Component({
  selector: 'my-app',
  template: '<h1>My first App</h1>'
  directives: [OverlaymenuComponent]
  directives: [OverlaymenuDirective]
  
})

export class AppComponent {
  
}


******SECOND ITERATION*******************************************
import {Component} from '@angular/core';
import {AppModule} from './app.module';
import {OvelaymenuComponent} from './overlaymenu.component';
import {OverlaymenuDirective} from './overlaymenu.directive';

@Component({
  selector: 'my-app',
  template: `
              <cardmenu>
                <ul>
                  <li *ngFor="#menuitem of menuitems"> 
                    {{menutitem}}</li>
                </ul>  
              </cardmenu>
              `,
  directives: [OverlaymenuComponent, OverlaymenuDirective]
  providers: [OverlaymenuService]
})

export class AppComponent {
    menuitems;
  
  constructor(overlaymenuService: OverlaymenuService) {
        this.menutiems = overlaymenuService.getMenuitems();
  }
}


********THIRD ITERATION**************************************
import {Component, OnInit} from '@angular/core';


@Component({
  moduleId: module.id,
  selector: 'my-app',
  templateUrl: 'app.component.html',

  providers: [OverlaymenuService]
})

export class AppComponent implements OnInit {
    menuitems;
  
  constructor(overlaymenuService: OverlaymenuService) {
        this.menutiems = overlaymenuService.getMenuitems();
  }

    ngOnInit() {
    }
}




//app.module
import {NgModule} from '@angular/core';
import {BrowserModule} from '@angular/platform-browser';
import {AppComponent} from './app.component';
import {OverlaymenuDirective} from './overlaymenu.directive';
import {OverlaymenuService} from './overlaymenu.service';


@NgModule({
    imports: [BrowserModule],
    declarations: [OverlaymenuDirective],
    bootstrap: [AppComponent],
    providers: [OverlaymenuService]
})

export class AppModule {
  
}


