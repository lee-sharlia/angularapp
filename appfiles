//overlaymenu.component
import {Component} from '@angular/core';
import {AppComponent} from './app.component';

@Component({
    selector: 'cardmenu',
    template: `
                <h3> {{title}} </h3>
                <br />
                <ul>
                  <li *ngFor="#menuitem of menuitems"> 
                    {{menutitem}}</li>
                </ul>
                `
    
    providers: [OverlaymenuService]
    
})

export class OverlaymenuComponent {
  title = "Menu Items";
  menuitem;
  
  constructor(overlaymenuService: OverlaymenuService) {
        this.menutiems=overlaymenuService.getMenuitems ();
  }
}

//overlaymenu.directive
import {OverlaymenuComponent, ElementRef, Input};

@Directive({
    selector: 'cardmenu',
})

export class OverlaymenuDirective {
    constructor(el:ElementRef)
}

//overlaymenu.service
export class OverlaymenuService {
  getMenuitems(): string [] {
    return ["Initial", "Modify", "Evaluate"];
  }
}
